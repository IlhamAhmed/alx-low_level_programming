#include "holberton.h"
/**
 **string_toupper - chnges all lowercase letters to upper case
 *@*: takes a pointer to string
 *Return: a char
 */
char *string_toupper(char *s)
{
	int i;

	i = 0;
	while (s[i] != '\0')
	{
		if (s[i] > 96 && s[i] < 123)
		{
			s[i] = s[i] - 32;
		}
		i++;
	}
	return (s);
}
